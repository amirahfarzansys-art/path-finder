{
  "name": "path-finder",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && npm run build:client && npm run build:server",
    "build:client": "vite build --outDir dist/client",
    "build:server": "vite build --ssr src/entry-server.js --outDir dist/server",
    "preview": "vite preview",
    "deploy": "cross-env BASE=/path-finder/ npm run build:client && gh-pages -d dist/client"
  },
  "devDependencies": {
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/forms": "^0.5.11",
    "@types/node": "^25.2.3",
    "gh-pages": "^6.3.0",
    "typescript": "~5.9.3",
    "vite": "^7.3.1"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "compression": "^1.8.1",
    "express": "^5.1.0",
    "sirv": "^3.0.1"
  }
}